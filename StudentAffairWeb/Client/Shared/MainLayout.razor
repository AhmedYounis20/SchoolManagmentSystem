@inherits LayoutComponentBase

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <div class="top-row px-4">
                    <a href="profile">@context.User.Claims.FirstOrDefault().Value</a>
                    <a href="javascript:void(0)" onclick="@(async ()=> await Logout())">Logout</a>
                </div>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        @{
            navigationManager.NavigateTo("/login");
        }
    </NotAuthorized>
</AuthorizeView>
@code {
    private async Task Logout()
    {
        await _authServices.LogOut();
        await InvokeAsync(() => StateHasChanged());
    }
}